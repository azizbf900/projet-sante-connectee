{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
    <section class="product-container">
        <div class="product-header">
            <h1>{{ produit.nom }}</h1>
            <p class="product-price">{{ produit.prix }}€</p>
        </div>

        <div class="product-details">
            <div class="product-image">
                <img src="{{ asset(produit.imagePath) }}" alt="{{ produit.nom }}" />
            </div>
            
            <div class="product-description">
                <p>{{ produit.description }}</p>
            </div>

            <div class="product-actions">
                <a href="#" class="btn-buy">Acheter maintenant</a>
                <a href="#" class="btn-add-to-cart">Ajouter au panier</a>
            </div>
        </div>
    </section>

<style>
/* Styles généraux pour la page */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
}

.product-container {
    width: 80%;
    margin: 40px auto;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    padding: 2rem;
    transition: transform 0.3s ease-in-out;
}

.product-container:hover {
    transform: translateY(-10px);
}

.product-header {
    text-align: center;
    margin-bottom: 2rem;
}

.product-header h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #333;
    text-transform: uppercase;
}

.product-price {
    font-size: 1.5rem;
    color: #e94e77;
    margin-top: 10px;
    font-weight: bold;
}

.product-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
    animation: fadeIn 1s ease-in-out;
}

.product-image {
    flex: 1;
    max-width: 500px;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
}

.product-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease-in-out;
}

.product-image:hover img {
    transform: scale(1.05);
}

.product-description {
    flex: 1;
    max-width: 500px;
    padding: 1rem;
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
}

.product-actions {
    margin-top: 20px;
    display: flex;
    gap: 15px;
    justify-content: center;
}

.btn-buy, .btn-add-to-cart {
    padding: 15px 30px;
    background-color: #e94e77;
    color: white;
    text-decoration: none;
    border-radius: 30px;
    font-weight: bold;
    text-align: center;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-buy:hover, .btn-add-to-cart:hover {
    background-color: #d13a64;
    transform: translateY(-5px);
}

/* Animation de fadeIn */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsivité */
@media (max-width: 768px) {
    .product-details {
        flex-direction: column;
    }

    .product-image, .product-description {
        max-width: 100%;
    }
}

@media (max-width: 480px) {
    .product-header h1 {
        font-size: 2rem;
    }

    .product-price {
        font-size: 1.2rem;
    }
}
</style>

{% endblock %}