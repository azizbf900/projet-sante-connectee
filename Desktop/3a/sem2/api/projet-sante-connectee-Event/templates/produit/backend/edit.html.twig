{% extends 'base.html.twig' %}

{% block title %}Modifier le Produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="fw-bold">Modifier le Produit</h2>
        </div>

        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.nom, 'Nom du produit') }}
                    {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description du produit') }}
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.prix, 'Prix') }}
                    {{ form_widget(form.prix, { 'attr': { 'class': 'form-control' } }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.quantite, 'Quantité en stock') }}
                    {{ form_widget(form.quantite, { 'attr': { 'class': 'form-control' } }) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.categorie, 'Catégorie') }}
                    {{ form_widget(form.categorie, { 'attr': { 'class': 'form-control' } }) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('produit_index') }}" class="btn btn-secondary btn-sm">Retour</a>
                    <button type="submit" class="btn btn-success btn-sm">Sauvegarder</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}