{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="fw-bold">Liste des Produits</h2>
        </div>

        <div class="card-body">
            <!-- Message Flash si produit créé/supprimé -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center fw-bold">{{ message }}</div>
            {% endfor %}

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-secondary">Produits Disponibles</h4>
                <a href="{{ path('produit_new') }}" class="btn btn-success btn-lg shadow-sm">
                    <i class="fas fa-plus"></i> Ajouter un Produit
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th>Catégorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for produit in produits %}
                            <tr class="animate-row">
                                <td>{{ produit.id }}</td>
                                <td class="fw-bold text-dark">{{ produit.Nom }}</td>
                                <td>{{ produit.description }}</td>
                                <td class="text-success fw-bold">
                                    {{ produit.prix | number_format(2, '.', ',') }} TND
                                </td>
                                <td>
                                    {% if produit.categorie %}
                                        <span class="badge bg-soft-primary text-primary" 
                                              data-category-id="{{ produit.categorie.id }}" 
                                              data-category-name="{{ produit.categorie.name }}">
                                              {{ produit.categorie.name }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-soft-secondary text-secondary" 
                                              data-category-id="none" 
                                              data-category-name="Aucune catégorie">
                                              Aucune catégorie
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="d-flex justify-content-center align-items-center">
                                    <!-- Edit Button (without path, no action) -->
                                    <button type="button" class="btn btn-warning btn-sm me-2" disabled>
                                        <i class="fas fa-edit"></i> Editer
                                    </button>

                                    <!-- Delete Button (Form to submit DELETE request) -->
                                    <form method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" class="d-inline" 
                                        onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}" />
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucun produit trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Meta Tags -->
{% block meta %}
    <meta name="description" content="Liste des produits disponibles dans notre magasin. Découvrez nos produits classés par catégorie et à des prix compétitifs." />
    <meta name="keywords" content="produits, magasin, catégorie, prix" />
    <meta name="robots" content="index, follow" />
{% endblock %}

<style>
/* Amélioration du style général des tables */
.table {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
}

.table th {
    font-size: 1.1rem;
    background-color: #f8f9fa;
    color: #495057;
    text-align: center;
}

.table td {
    font-size: 1rem;
}

.table-hover tbody tr:hover {
    background-color: #f1f1f1;
    transform: translateY(-5px);
    transition: transform 0.2s ease-in-out;
}

/* Modifications des badges pour des couleurs plus douces */
.badge {
    font-size: 0.9rem;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
}

.badge.bg-soft-primary {
    background-color: #d1e7ff;
    color: #0069d9;
}

.badge.bg-soft-secondary {
    background-color: #f8d7da;
    color: #721c24;
}

.animate-row {
    animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Style du bouton Ajouter un Produit */
.btn-success {
    background-color: #28a745;
    color: white;
    box-shadow: 0 4px 8px rgba(0, 255, 0, 0.2);
}

.btn-success:hover {
    background-color: #218838;
    box-shadow: 0 6px 12px rgba(0, 255, 0, 0.3);
}

/* Style des alertes de succès */
.alert-success {
    background-color: #28a745;
    color: white;
    font-weight: bold;
    border-radius: 0.25rem;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Edit Button Style */
.btn-warning {
    background-color: #ffc107;
    color: white;
    box-shadow: 0 4px 8px rgba(255, 193, 7, 0.2);
}

.btn-warning:disabled {
    background-color: #f5c342;
    cursor: not-allowed;
}

/* Delete Button Style */
.btn-danger {
    background-color: #dc3545;
    color: white;
    box-shadow: 0 4px 8px rgba(255, 0, 0, 0.2);
}

.btn-danger:hover {
    background-color: #c82333;
    box-shadow: 0 6px 12px rgba(255, 0, 0, 0.3);
}

.d-flex.justify-content-between {
    margin-bottom: 1.5rem;
}

h4 {
    font-size: 1.3rem;
    font-weight: 500;
    color: #6c757d;
}
</style>

{% endblock %}
