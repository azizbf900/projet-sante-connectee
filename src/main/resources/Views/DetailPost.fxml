<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetailPostController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #fdfdfd;">

    <VBox spacing="20"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0"
          style="-fx-padding: 30; -fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">

        <!-- Titre principal -->
        <Label text="📝 Détail du Post"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

        <!-- Image du post -->
        <ImageView fx:id="imageView"
                   fitHeight="250.0"
                   fitWidth="400.0"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2); -fx-background-radius: 10;" />

        <!-- Titre du post -->
        <Label fx:id="titreLabel"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Date -->
        <Label fx:id="dateLabel"
               style="-fx-text-fill: #888888; -fx-font-size: 13px;" />

        <!-- Légende -->
        <Label fx:id="legendeLabel"
               wrapText="true"
               maxWidth="600.0"
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />

        <!-- Nombre de commentaires -->
        <Label fx:id="commentCountLabel"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #0077cc;" />

        <!-- Zone des commentaires -->
        <VBox fx:id="commentsSection"
              spacing="10.0"
              style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 8;" />

        <!-- Bouton de retour -->
        <Button text="⬅ Retour à la liste"
                fx:id="backButton"
                onAction="#handleBack"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 16;" />
    </VBox>
</AnchorPane>
