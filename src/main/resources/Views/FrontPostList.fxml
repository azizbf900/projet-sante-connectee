<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="903.0"
            style="-fx-background-color: linear-gradient(
              from 0% 0% to 0% 100%,
              #0d47a1 0%,     /* Bleu foncé médical */
              #64b5f6 50%,    /* Bleu ciel */
              #ffffff 100%    /* Blanc */
           );"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.FrontPostListController">

    <HBox fx:id="rootBox"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- MENU LATÉRAL MASQUÉ PAR DÉFAUT -->
        <AnchorPane fx:id="menuPane"
                    prefWidth="200.0"
                    style="-fx-background-color: #003366;"
                    visible="false" opacity="0">
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <padding>
                    <Insets top="30.0" left="10.0" right="10.0" bottom="10.0"/>
                </padding>
                <children>
                    <Label text="Menu"
                           style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Button onAction="#handleManagePosts" text="Gérer les posts" style="-fx-pref-width: 180;" />
                    <Button text="Mon profil" style="-fx-pref-width: 180;" />
                    <Button text="Déconnexion" style="-fx-pref-width: 180;" />
                    <Button text="À propos" style="-fx-pref-width: 180;" />
                </children>
            </VBox>
        </AnchorPane>

        <!-- CONTENU PRINCIPAL -->
        <VBox fx:id="contentBox" prefWidth="703.0" spacing="15.0">
            <padding>
                <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
            </padding>
            <children>

                <!-- Ligne : Bouton burger + Logo + Titre -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="burgerButton"
                                text="☰"
                                onAction="#toggleMenu"
                                style="-fx-font-size: 20px; -fx-background-color: transparent; -fx-text-fill: #333;" />

                        <ImageView fx:id="logoImage" fitHeight="40.0" fitWidth="44.0" preserveRatio="true">
                            <image>
                                <Image url="@/images/sanaconnect_logo.jpg.jpg"/>
                            </image>
                        </ImageView>

                        <Label text="Vitalink"
                               style="-fx-text-fill: #343a40; -fx-font-size: 24px; -fx-font-weight: bold;">
                            <font>
                                <Font size="21.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Recherche -->
                <TextField fx:id="searchField"
                           promptText="Rechercher un post par titre..."
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8; -fx-border-color: #ced4da;" />

                <!-- Tri -->
                <ComboBox fx:id="sortComboBox"
                          promptText="Trier par date"
                          style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                <!-- Liste des posts -->
                <ScrollPane hbarPolicy="NEVER" vbarPolicy="ALWAYS" fitToWidth="true"
                            style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ced4da; -fx-border-width: 1;">
                    <content>
                        <VBox alignment="TOP_CENTER" prefWidth="Infinity" spacing="20"
                              style="-fx-padding: 20; -fx-background-color: #ffffff;">
                            <VBox fx:id="postContainer"
                                  spacing="15"
                                  alignment="TOP_CENTER"
                                  maxWidth="600"
                                  style="-fx-padding: 15;
                                         -fx-background-color: #fdfdfd;
                                         -fx-background-radius: 12;
                                         -fx-border-radius: 12;
                                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 4);" />
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Label SanaConnect en bas -->
                <Label text="SanaConnect • 2025"
                       style="-fx-font-size: 13px; -fx-text-fill: black; -fx-opacity: 0.8; -fx-font-style: italic;"
                       VBox.vgrow="ALWAYS"
                       alignment="BOTTOM_LEFT"
                       maxWidth="Infinity"/>

            </children>
        </VBox>
    </HBox>
</AnchorPane>
