<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FrontPostListController">
    <children>
        <!-- VBox principal qui contient le titre et le ScrollPane -->
        <VBox layoutX="92.0" layoutY="142.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Padding autour du VBox -->
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <children>
                <!-- Titre de la page -->
                <Label text="Tous les Posts">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- ScrollPane pour contenir la liste des posts -->
                <ScrollPane prefHeight="550.0" prefWidth="560.0" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
                    <content>
                        <!-- VBox qui contiendra dynamiquement les cartes des posts -->
                        <VBox fx:id="postContainer" prefHeight="546.0" prefWidth="558.0" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
