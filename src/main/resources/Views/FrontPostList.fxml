<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom, #0d47a1 0%, #64b5f6 50%, #ffffff 100%);"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.FrontPostListController">

    <HBox fx:id="rootBox" spacing="0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- MENU LATÉRAL - Version améliorée -->
        <AnchorPane fx:id="menuPane" prefWidth="220.0"
                    style="-fx-background-color: linear-gradient(to bottom, #003366, #004080);"
                    visible="false" opacity="0">
            <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-radius: 0 15 15 0;">
                <padding>
                    <Insets top="40.0" left="15.0" right="15.0" bottom="20.0"/>
                </padding>
                <children>
                    <Label text="Menu Principal"
                           style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 15 0;" />

                    <Button onAction="#handleManagePosts" text="Gérer les posts"
                            style="-fx-background-color: #0056b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 190; -fx-background-radius: 8;" />

                    <Button text="Mon profil"
                            style="-fx-background-color: #0056b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 190; -fx-background-radius: 8;" />

                    <Button text="Déconnexion"
                            style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 190; -fx-background-radius: 8;" />

                    <Button text="À propos"
                            style="-fx-background-color: #5bc0de; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 190; -fx-background-radius: 8;" />

                    <!-- Logo en bas du menu -->
                    <ImageView fitHeight="60.0" fitWidth="60.0" preserveRatio="true"
                               style="-fx-opacity: 0.8; -fx-padding: 20 0 0 0;">
                        <image>
                            <Image url="@/images/sanaconnect_logo.jpg.jpg"/>
                        </image>
                    </ImageView>
                </children>
            </VBox>
        </AnchorPane>

        <!-- CONTENU PRINCIPAL - Version améliorée -->
        <VBox fx:id="contentBox" spacing="20.0" style="-fx-background-color: #f8f9fa;">
            <padding>
                <Insets top="25.0" bottom="25.0" left="30.0" right="30.0"/>
            </padding>
            <children>

                <!-- En-tête amélioré -->
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                    <children>
                        <Button fx:id="burgerButton" text="☰" onAction="#toggleMenu"
                                style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-cursor: hand;" />

                        <ImageView fx:id="logoImage" fitHeight="50.0" fitWidth="55.0" preserveRatio="true">
                            <image>
                                <Image url="@/images/sanaconnect_logo.jpg.jpg"/>
                            </image>
                        </ImageView>

                        <Label text="Vitalink" style="-fx-text-fill: #2c3e50; -fx-font-size: 28px; -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Barre de recherche améliorée -->
                <HBox spacing="15" alignment="CENTER">
                    <TextField fx:id="searchField" prefWidth="400.0"
                               promptText="Rechercher un post par titre..."
                               style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10 15; -fx-border-color: #ced4da; -fx-background-insets: 0;" />

                    <ComboBox fx:id="sortComboBox" prefWidth="180.0"
                              promptText="Trier par date"
                              style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 0 15;" />
                </HBox>

                <!-- Liste des posts améliorée -->
                <ScrollPane hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fitToWidth="true"
                            style="-fx-background: transparent; -fx-border-color: transparent; -fx-padding: 0;">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 10;">
                            <VBox fx:id="postContainer" spacing="20" alignment="TOP_CENTER" />
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Pied de page amélioré -->
                <Label text="SanaConnect • 2025"
                       style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-style: italic; -fx-padding: 15 0 0 0;"
                       VBox.vgrow="ALWAYS" alignment="BOTTOM_CENTER" />
            </children>
        </VBox>
    </HBox>
</AnchorPane>