<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controller.ChatbotController" spacing="8" alignment="CENTER" style="-fx-padding: 18;">
    <Label text="Chatbot Santé" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1976d2;" />
    <ScrollPane fx:id="chatScroll" fitToWidth="true" prefHeight="340" prefWidth="420">
        <VBox fx:id="chatBox" spacing="6" style="-fx-padding: 6;" />
    </ScrollPane>
    <HBox spacing="8" alignment="CENTER">
        <TextField fx:id="userInput" promptText="Posez votre question santé ici..." HBox.hgrow="ALWAYS" />
        <Button fx:id="sendBtn" text="Envoyer" />
    </HBox>
</VBox>
