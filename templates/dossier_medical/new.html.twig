



{% block stylesheets %}
   
    <style>
        body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #4b0082, #1e90ff);
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
}

.rdv-container {
    width: 90%;
    max-width: 500px;
    background: rgba(255, 255, 255, 0.95);
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    text-align: center;
    margin-top: 20px;
}

h1 {
    color: #333;
    font-size: 22px;
    margin-bottom: 15px;
    text-align: center;
}

.form-group {
    margin-bottom: 15px;
    text-align: left;
}

.form-group label {
    font-weight: bold;
    color: #555;
    display: block;
    margin-bottom: 5px;
}

.form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    box-sizing: border-box;
    transition: border 0.3s;
}

.form-control:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.3);
}

.btn-container {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

.btn {
    padding: 12px;
    border-radius: 5px;
    font-size: 16px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    width: 48%;
    transition: 0.3s ease-in-out;
}

.btn-primary {
    background: #007bff;
    color: white;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

.btn:hover {
    opacity: 0.8;
}

/* Responsive Design */
@media (max-width: 600px) {
    .rdv-container {
        width: 95%;
        padding: 20px;
    }

    .btn-container {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        margin-bottom: 10px;
    }
}

    </style>
{% endblock %}

{% block body %}


<div class="rdv-container">
    

    <div class="form-section">
        {{ include('dossier_medical/_form.html.twig') }}
    </div>
</div>
{% endblock %}