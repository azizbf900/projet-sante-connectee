{% extends 'base1.html.twig' %}

{% block title %}Dossier Médical{% endblock %}

{% block content %}
    <style>
        body {
            background: url("{{ asset('img/127.jpg') }}") no-repeat center center fixed;
            background-size: cover;
            background-color: #f4f4f9;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .table-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .table {
            width: 60%;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .actions a {
            text-decoration: none;
            color: #007bff;
            margin: 0 5px;
        }

        .actions a:hover {
            text-decoration: underline;
        }

        .btn-create-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .btn-create {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-create:hover {
            background-color: #218838;
        }

        .pagination {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        .pagination a, .pagination span {
            margin: 0 5px;
            text-decoration: none;
            color: #007bff;
        }

        .pagination .current {
            font-weight: bold;
            color: #333;
        }

        .pagination a:hover {
            text-decoration: underline;
        }
    </style>

    <h1>Liste des Dossiers Médicaux</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Historique Maladies</th>
                    <th>Allergies</th>
                    <th>Traitements en cours</th>
                    <th>Groupe Sanguin</th>
                    <th>Poids (kg)</th>
                    <th>Taille (cm)</th>
                    <th>Date de Création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for dossier in dossier_medicals %}
                <tr>
                    <td>{{ dossier.patient.nom ~ ' ' ~ dossier.patient.prenom }}</td>
                    <td>{{ dossier.historiqueMaladies }}</td>
                    <td>{{ dossier.allergies }}</td>
                    <td>{{ dossier.traitementsEnCours }}</td>
                    <td>{{ dossier.groupeSanguin }}</td>
                    <td>{{ dossier.poids }}</td>
                    <td>{{ dossier.taille }}</td>
                    <td>{{ dossier.createdAt ? dossier.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_dossier_medical_show', {'id': dossier.id}) }}">Voir</a> |
                        <a href="{{ path('app_dossier_medical_edit', {'id': dossier.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucun dossier trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

       <div class="pagination">
        {{ knp_pagination_render(dossier_medicals) }}
    </div>
{% endblock %}
