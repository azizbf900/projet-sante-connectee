    <script>
        document.getElementById('search').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#dossierTable tbody tr'); // Correction ici
            
            rows.forEach(row => {
                let text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });

       document.getElementById('filter-status').addEventListener('change', function() {
            let statusFilter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#rdvTable tbody tr');
            rows.forEach(row => {
                let status = row.querySelector('.rdv-statut').textContent.toLowerCase();
                row.style.display = (statusFilter === '' || status === statusFilter) ? '' : 'none';
            });
        });

        document.getElementById('filter-date').addEventListener('change', function() {
            let dateFilter = this.value;
            let rows = document.querySelectorAll('#rdvTable tbody tr');
            rows.forEach(row => {
                let date = row.querySelector('.rdv-date').textContent;
                row.style.display = (dateFilter === '' || date === dateFilter) ? '' : 'none';
            });
        });

      

function closeModal() {
    document.getElementById('statsModal').style.display = 'none';
}



    document.addEventListener("DOMContentLoaded", function () {
    document.getElementById("exportPdf").addEventListener("click", function () {
        const { jsPDF } = window.jspdf;
        let doc = new jsPDF();
        
        doc.text("Liste des Rendez-vous", 10, 10);
        
        let rows = [];
        document.querySelectorAll("#rdvTable tbody tr").forEach(row => {
            let rowData = [];
            row.querySelectorAll("td").forEach(cell => {
                rowData.push(cell.innerText);
            });
            rows.push(rowData);
        });
        
        doc.autoTable({ head: [["DateHeure", "Statut", "Actions"]], body: rows });
        doc.save("rendez-vous.pdf");
    });
    
    document.getElementById("exportCsv").addEventListener("click", function () {
        let csvContent = "DateHeure,Statut\n";
        document.querySelectorAll("#rdvTable tbody tr").forEach(row => {
            let rowData = [];
            row.querySelectorAll("td:not(:last-child)").forEach(cell => {
                rowData.push(cell.innerText);
            });
            csvContent += rowData.join(",") + "\n";
        });
        
        let blob = new Blob([csvContent], { type: "text/csv" });
        let link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "rendez-vous.csv";
        link.click();
    });
    
    document.getElementById("exportImg").addEventListener("click", function () {
        html2canvas(document.getElementById("rdvTable")).then(canvas => {
            let link = document.createElement("a");
            link.href = canvas.toDataURL("image/png");
            link.download = "rendez-vous.png";
            link.click();
        });
    });
});


    </script>
    <script>
    document.getElementById('btn-statistiques').addEventListener('click', function () {
    fetch('/dossier_medical/statistiques')
        .then(response => {
            if (!response.ok) throw new Error('Erreur serveur');
            return response.json();
        })
        .then(data => {
            document.getElementById('resultat').innerHTML = `
                <p>Total dossiers : ${data.total}</p>
                <h3>Allergies (compte) :</h3>
                <ul>${Object.entries(data.allergies_count).map(([k, v]) => `<li>${k}: ${v}</li>`).join('')}</ul>
                <h3>Allergies (pourcentage) :</h3>
                <ul>${Object.entries(data.allergies_pourcentage).map(([k, v]) => `<li>${k}: ${v}%</li>`).join('')}</ul>
            `;
        })
        .catch(error => {
            document.getElementById('resultat').innerHTML = `<p style="color:red">${error.message}</p>`;
            console.error(error);
        });
});

</script>


