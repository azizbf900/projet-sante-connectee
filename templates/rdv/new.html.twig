{% extends 'base.html.twig' %}

{% block title %}Nouveau Rendez-vous{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        .rdv-container {
            max-width: 500px;
            margin: 40px auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        h1 {
            color: #444;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            font-weight: 600;
            color: #555;
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 8px rgba(106, 17, 203, 0.2);
        }

        .btn-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 20px;
            border-radius: 8px;
            text-align: center;
            font-size: 16px;
            text-decoration: none;
            width: 100%;
            transition: all 0.3s ease-in-out;
            font-weight: bold;
        }

        .btn-primary {
            background: #6a11cb;
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background: #4e0fa8;
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
            border: none;
        }

        .btn-secondary:hover {
            background: #565e64;
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
    <header>
        <div class="header-area">
            <div id="sticky-header" class="main-header-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-3 col-lg-2">
                            <div class="logo">
                                <a href="{{ path('app_acceill') }}">
                                    <img src="{{ asset('img/logo.png') }}" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-7">
                            <div class="main-menu d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a class="active" href="{{ path('app_acceill') }}">Rendez-vous</a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="rdv-container">
        <h1>Créer un Nouveau Rendez-vous</h1>
        <div class="form-section">
            {{ include('rdv/_form.html.twig') }}
        </div>
       
    </div>
    {% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector("form");
            const successMessage = document.createElement("div");
            successMessage.innerHTML = "Rendez-vous enregistré avec succès !";
            successMessage.style.cssText = "display: none; color: white; background: green; padding: 10px; text-align: center; border-radius: 5px; position: fixed; top: 20px; right: 20px; z-index: 1000;";

            document.body.appendChild(successMessage);

            form.addEventListener("submit", function (event) {
                event.preventDefault();
                successMessage.style.display = "block";
                setTimeout(() => {
                    successMessage.style.display = "none";
                    form.submit();
                }, 2000);
            });
        });
    </script>
{% endblock %}

{% endblock %}
