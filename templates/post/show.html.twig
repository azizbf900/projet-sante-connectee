{% extends 'base.html.twig' %}

{% block title %} {{ post.titre }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles personnalisés pour la page de détail du post */
        .post-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .post-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .post-image {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .post-legende {
            font-size: 1.25rem;
            color: #555;
            text-align: center;
            margin-bottom: 20px;
        }

        .post-date {
            font-size: 1rem;
            color: #777;
            text-align: center;
            margin-bottom: 30px;
        }

        .post-actions {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .post-actions .btn {
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .post-actions .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .post-actions .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .post-actions .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .post-actions .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
{% endblock %}

{% block body %}
<div class="post-container">
    <div class="card shadow-lg">
        <div class="card-body">
            <!-- Titre du post -->
            <h1 class="post-title">{{ post.titre }}</h1>

            <!-- Image du post -->
            {% if post.contenu %}
                <div class="text-center mb-4">
                    <img src="{{ asset('uploads/' ~ post.contenu) }}" class="post-image" alt="Image du post">
                </div>
            {% else %}
                <div class="alert alert-info text-center" role="alert">
                    Aucune image disponible pour ce post.
                </div>
            {% endif %}

            <!-- Légende du post -->
            {% if post.legende %}
                <p class="post-legende">{{ post.legende }}</p>
            {% endif %}

            <!-- Date de publication -->
            <p class="post-date">
                <i class="fas fa-calendar-alt"></i> Publié le {{ post.datePublication|date('d/m/Y H:i') }}
            </p>

            <!-- Boutons d'action -->
            <div class="post-actions">
                <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <form method="post" action="{{ path('post_delete', {'id': post.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
                <a href="{{ path('post_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}