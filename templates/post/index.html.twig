{% extends 'base.html.twig' %}

{% block title %} Liste des Posts {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <style>
        /* Styles pour le bouton "Voir plus" des l√©gendes */
        .post-legende {
            display: -webkit-box;
            -webkit-line-clamp: 3; /* Limite √† 3 lignes */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

        .post-legende.expanded {
            -webkit-line-clamp: unset; /* Supprime la limite de lignes */
        }

        .btn-see-more {
            background: none;
            border: none;
            color: #007bff;
            cursor: pointer;
            padding: 0;
            font-size: 14px;
        }

        .btn-see-more:hover {
            text-decoration: underline;
        }

        /* Styles pour l'ic√¥ne de commentaire */
        .comment-icon {
            font-size: 18px;
            margin-right: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Affichage des messages flash -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning text-center">
            {{ message }}
        </div>
    {% endfor %}

    <!-- Contenu initial de la page -->
    <div class="container mt-4">
        <!-- Bouton "Cr√©er un Post" -->
        <div class="d-flex justify-content-end mb-4">
            <a href="{{ path('post_new') }}" class="btn btn-primary shadow-sm">Cr√©er un Post</a>
        </div>

        <!-- S√©lecteur de tri -->
        <div class="d-flex justify-content-end mb-4">
            <select id="sort-posts" class="form-select w-auto">
                <option value="date" {% if sort == 'date' %}selected{% endif %}>Trier par Date</option>
                <option value="popularity" {% if sort == 'popularity' %}selected{% endif %}>Trier par Popularit√©</option>
            </select>
        </div>

        <script>
            document.getElementById("sort-posts").addEventListener("change", function () {
                let selected = this.value;
                window.location.href = "?sort=" + selected;
            });
        </script>

        <div class="row">
            {% for post in posts %}
                <div class="col-12 mb-4">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                        <!-- Image du post -->
                        {% if post.contenu %}
                            <img src="{{ asset('uploads/' ~ post.contenu) }}" class="card-img-top" alt="Image du post" style="max-height: 400px; width: 100%; object-fit: contain;">
                        {% else %}
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light text-secondary" 
                                 style="height: 400px; font-size: 18px; font-weight: bold;">
                                Aucune image disponible
                            </div>
                        {% endif %}

                        <div class="card-body text-center p-4">
                            <!-- Titre du post -->
                            <h4 class="card-title fw-bold text-primary">{{ post.titre }}</h4>

                            <!-- L√©gende du post avec "Voir plus" -->
                            {% if post.legende %}
                                <p class="post-legende" id="legende-{{ post.id }}">
                                    "{{ post.legende }}"
                                </p>
                                {% if post.legende|length > 100 %}
                                    <button class="btn-see-more" onclick="toggleLegende({{ post.id }})">
                                        Voir plus
                                    </button>
                                {% endif %}
                            {% endif %}

                            <!-- Date de publication -->
                            <p class="card-text text-muted" style="font-size: 14px;">
                                üïí {{ post.datePublication|date('d/m/Y H:i') }}
                            </p>

                            <!-- Nombre de commentaires avec ic√¥ne -->
                            <p class="card-text text-muted" style="font-size: 14px;">
                                <i class="fas fa-comment comment-icon"></i> {{ post.commentaires|length }} Commentaire(s)
                            </p>

                            <!-- Boutons Like & Dislike pour le Post -->
                            <div class="d-flex justify-content-center gap-3 mt-3">
                                <button class="btn btn-outline-success like-post" data-id="{{ post.id }}">
                                    üëç <span id="likes-count-{{ post.id }}">{{ post.likes }}</span>
                                </button>
                                <button class="btn btn-outline-danger dislike-post" data-id="{{ post.id }}">
                                    üëé <span id="dislikes-count-{{ post.id }}">{{ post.dislikes }}</span>
                                </button>
                            </div>

                            <!-- Bouton "Voir Post" -->
                            <div class="d-flex justify-content-center mt-3">
                                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-info btn-sm px-4 shadow-sm">
                                    <i class="fas fa-eye"></i> Voir Post
                                </a>
                            </div>

                            <!-- Commentaires -->
                            <h3 class="mt-4">Commentaires</h3>

                            {% for commentaire in post.commentaires %}
                                <div class="card mt-2">
                                    <div class="card-body">
                                        <p>{{ commentaire.contenu }}</p>
                                        <p class="text-muted" style="font-size: 12px;">
                                            Ajout√© le {{ commentaire.dateCommentaire|date('d/m/Y H:i') }}
                                        </p>

                                        <!-- Bouton pour signaler le commentaire -->
                                        <form action="{{ path('commentaire_report', {'id': commentaire.id}) }}" method="post" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('report' ~ commentaire.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-flag"></i> Signaler
                                            </button>
                                        </form>

                                        <!-- Boutons Like & Dislike pour le Commentaire -->
                                        <div class="d-flex justify-content-center gap-2 mt-2">
                                            <button class="btn btn-outline-success like-comment" data-id="{{ commentaire.id }}">
                                                üëç <span id="likes-comment-{{ commentaire.id }}">{{ commentaire.likes }}</span>
                                            </button>
                                            <button class="btn btn-outline-danger dislike-comment" data-id="{{ commentaire.id }}">
                                                üëé <span id="dislikes-comment-{{ commentaire.id }}">{{ commentaire.dislikes }}</span>
                                            </button>
                                        </div>

                                        <!-- Boutons Modifier & Supprimer du commentaire -->
                                        <div class="d-flex justify-content-end gap-2 mt-2">
                                            <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-outline-warning btn-sm px-3 shadow-sm">
                                                ‚úèÔ∏è Modifier
                                            </a>
                                            <form action="{{ path('commentaire_delete', {'id': commentaire.id}) }}" method="post" 
                                                  onsubmit="return confirm('Voulez-vous vraiment supprimer ce commentaire ?');">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm px-3 shadow-sm">üóëÔ∏è Supprimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p class="text-muted">Aucun commentaire pour le moment.</p>
                            {% endfor %}

                            <!-- Bouton pour ajouter un commentaire -->
                            <a href="{{ path('commentaire_new', {'id': post.id}) }}" class="btn btn-primary mt-3">
                                <i class="fas fa-comment"></i> Ajouter un commentaire
                            </a>

                            <!-- Boutons Modifier & Supprimer du post -->
                            <div class="d-flex justify-content-center gap-3 mt-3">
                                <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-outline-warning btn-sm px-4 shadow-sm">
                                    ‚úèÔ∏è Modifier
                                </a>
                                <form action="{{ path('post_delete', {'id': post.id}) }}" method="post" 
                                      onsubmit="return confirm('Voulez-vous vraiment supprimer ce post ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                    <button type="submit" class="btn btn-outline-danger btn-sm px-4 shadow-sm">üóëÔ∏è Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted">Aucun post disponible.</p>
            {% endfor %}
        </div>
    </div>

    <!-- Script pour g√©rer le "Voir plus" des l√©gendes -->
    <script>
        function toggleLegende(postId) {
            const legende = document.getElementById(`legende-${postId}`);
            const button = legende.nextElementSibling;

            if (legende.classList.contains('expanded')) {
                legende.classList.remove('expanded');
                button.textContent = 'Voir plus';
            } else {
                legende.classList.add('expanded');
                button.textContent = 'Voir moins';
            }
        }
    </script>

    <!-- Inclusion du script AJAX pour Like/Dislike -->
    <script src="{{ asset('js/like.js') }}"></script>
{% endblock %}