{# templates/commentaire/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Commentaires{% endblock %}

{% block body %}
    <h1>Liste des Commentaires</h1>
    <table>
        <tr>
            <th>Contenu</th>
            <th>Date</th>
            <th>Post</th>
            <th>Actions</th>
        </tr>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.dateCommentaire|date('d/m/Y H:i') }}</td>
                <td>{{ commentaire.post.titre }}</td>
                <td>
                    <a href="{{ path('commentaire_show', {'id': commentaire.id}) }}">Voir</a>
                    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">Modifier</a>
                    <a href="{{ path('commentaire_delete', {'id': commentaire.id}) }}" onclick="return confirm('Êtes-vous sûr ?');">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('commentaire_new') }}">Ajouter un commentaire</a>
{% endblock %}
